import integers.choose

def pascal( n ) = [choose( n - 1, k ) | k <- 0..n-1]

def triangle( height ) =
	width = max( map(a -> a.toString().length(), pascal(height)) )

	if 2|width
		width++

	for n <- 1..height
		print( ' '*((width + 1)\2)*(height - n) )
		println( map(a -> format('%' + width + 'd ', a), pascal(n)).mkString() )

triangle( 10 )
