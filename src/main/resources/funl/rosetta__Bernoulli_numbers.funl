import integers.choose

// predefined as 'B( n )' in the 'integers' module, but can be explicitly implemented (only for lists) as:

def bernoulli( n::Integer ) | n >= 0 = sum( 1/(k + 1)*sum((if 2|r then 1 else -1)*choose(k, r)*(r^n) | r <- 0..k) | k <- 0..n )

for i <- 0..60 if i == 1 or 2|i
	println( i, bernoulli(i) )